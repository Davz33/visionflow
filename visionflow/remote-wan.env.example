# Remote WAN2.1 Configuration
# Copy this to .env and configure for your remote WAN endpoint

# Enable remote WAN mode
USE_REMOTE_WAN=true

# Remote WAN endpoint configuration
REMOTE_WAN_URL=http://your-remote-wan-service:8002
REMOTE_WAN_API_KEY=your_api_key_here
REMOTE_WAN_TIMEOUT=600
REMOTE_WAN_MAX_RETRIES=3

# Keep existing database and Redis settings
DB_HOST=postgres
DB_PORT=5432
DB_NAME=visionflow
DB_USER=visionflow
DB_PASSWORD=visionflow

REDIS_HOST=redis
REDIS_PORT=6379

# Storage settings
STORAGE_ENDPOINT=minio:9000
STORAGE_ACCESS_KEY=minio
STORAGE_SECRET_KEY=minio123

# API settings
API_HOST=0.0.0.0
API_PORT=8000
LOG_LEVEL=info

# Disable local model loading when using remote WAN
MODEL_DEVICE=auto
MODEL_CACHE_DIR=/app/models





