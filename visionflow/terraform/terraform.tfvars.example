# Minimal AWS Configuration for VisionFlow WAN2.1

# AWS Credentials
aws_access_key_id     = "YOUR_AWS_ACCESS_KEY_ID"
aws_secret_access_key = "YOUR_AWS_SECRET_ACCESS_KEY"

# AWS Infrastructure
aws_region        = "eu-west-2"             # London - closest European region to Switzerland
aws_ami_id        = "ami-0d739456ea4b4897c"  # Deep Learning AMI (Ubuntu 24.04) - eu-west-2
aws_instance_type = "g4dn.xlarge"            # Smaller GPU instance (might not require verification)
aws_key_pair_name = "your-key-pair-name"     # Your SSH key pair
aws_subnet_id     = "subnet-xxxxxxxxx"       # Your subnet - eu-west-2
vpc_id           = "vpc-xxxxxxxxx"          # Your default VPC - eu-west-2

# WAN2.1 Configuration
remote_wan_api_key = "your-secure-api-key-123"

# Instance Configuration
volume_size = 100

# Tags
tags = {
  Project     = "visionflow"
  Environment = "production"
  Service     = "wan2-1"
  ManagedBy   = "terraform"
}
