# Copy this to secrets-local.yaml and fill in your values
# kubectl apply -f k8s/local/secrets-local.yaml
---
apiVersion: v1
kind: Secret
metadata:
  name: visionflow-secrets
  namespace: visionflow
type: Opaque
stringData:
  # Database credentials
  DB_USER: "visionflow"
  DB_PASSWORD: "visionflow_local_password"
  
  # Redis password (optional for local)
  REDIS_PASSWORD: ""
  
  # HuggingFace token for model downloads
  HUGGINGFACE_TOKEN: "your_huggingface_token_here"
  
  # Google Cloud Service Account (for Vertex AI access from local)
  # Get this from GCP Console > IAM > Service Accounts
  GOOGLE_APPLICATION_CREDENTIALS_JSON: |
    {
      "type": "service_account",
      "project_id": "your-gcp-project",
      "private_key_id": "key-id",
      "private_key": "-----BEGIN PRIVATE KEY-----\nYOUR_PRIVATE_KEY_HERE\n-----END PRIVATE KEY-----\n",
      "client_email": "visionflow@your-gcp-project.iam.gserviceaccount.com",
      "client_id": "client-id",
      "auth_uri": "https://accounts.google.com/o/oauth2/auth",
      "token_uri": "https://oauth2.googleapis.com/token",
      "auth_provider_x509_cert_url": "https://www.googleapis.com/oauth2/v1/certs"
    }
  
  # Optional: LangChain API key for enhanced orchestration
  LANGCHAIN_API_KEY: "your_langchain_api_key_here"
  
  # MinIO credentials (local object storage)
  MINIO_ROOT_USER: "minio"
  MINIO_ROOT_PASSWORD: "minio123"
