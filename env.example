# VisionFlow Environment Configuration
# Copy this file to .env.local and fill in your actual values

# Environment
ENVIRONMENT=development
DEBUG=false

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=visionflow
DB_USER=visionflow
DB_PASSWORD=your_database_password_here

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=your_redis_password_here

# Storage Configuration
STORAGE_ENDPOINT=localhost:9000
STORAGE_ACCESS_KEY=your_access_key_here
STORAGE_SECRET_KEY=your_secret_key_here
STORAGE_BUCKET=visionflow
STORAGE_SECURE=false

# Model Configuration
WAN_MODEL_PATH=multimodalart/wan2-1-fast
MODEL_CACHE_DIR=./models
MODEL_DEVICE=auto
MAX_MEMORY_GB=8
ENABLE_CPU_OFFLOAD=true
ENABLE_XFORMERS=true
MAX_DURATION=30
DEFAULT_FPS=24
DEFAULT_RESOLUTION=512x512

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=1
LOG_LEVEL=info
LOG_FORMAT=json

# Monitoring Configuration
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000
ENABLE_METRICS=true
ENABLE_PROMETHEUS=false

# Grafana Configuration (for local development)
GRAFANA_USER=admin
GRAFANA_PASSWORD=your_grafana_password_here

# Google Cloud Configuration
VERTEX_AI_PROJECT=your_gcp_project_id
VERTEX_AI_REGION=us-central1
GOOGLE_APPLICATION_CREDENTIALS=/path/to/service-account.json

# LangChain Configuration
LANGCHAIN_TRACING_V2=true
LANGCHAIN_PROJECT=visionflow-orchestration
LANGCHAIN_API_KEY=your_langchain_api_key_here

# HuggingFace Configuration
HUGGINGFACE_TOKEN=your_huggingface_token_here

# OpenAI Configuration (if using OpenAI models)
OPENAI_API_KEY=your_openai_api_key_here

# Concurrency and Performance
MAX_CONCURRENT_GENERATIONS=2
TASK_TIMEOUT=300
MAX_FRAMES_PER_VIDEO=20

# Circuit Breaker Settings
CIRCUIT_BREAKER_FAILURE_THRESHOLD=5
CIRCUIT_BREAKER_RECOVERY_TIMEOUT=30

# GCP Tracking
GCP_TRACKING_ENABLED=true
CLOUD_LOGGING_ENABLED=true
CLOUD_MONITORING_ENABLED=true
